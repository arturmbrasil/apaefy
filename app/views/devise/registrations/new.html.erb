<div class="content-inner">
  <!-- Page Header-->
  <header class="page-header">
    <div class="container-fluid">
      <h2 class="no-margin-bottom">Cadastro de Funcionário</h2>
    </div>
  </header>
  <!-- Breadcrumb-->
  <ul class="breadcrumb">
    <div class="container-fluid">
      <li class="breadcrumb-item">
        <a href="index.html">Inicio</a>
      </li>
      <li class="breadcrumb-item active">Cadastro de Funcionário</li>
    </div>
  </ul>
  <!-- Cadastro de Funcionario -->
  <section class="forms dashboard-counts">
    <div class="container-fluid">
      <div class="row bg-white has-shadow">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal col-lg-12"}) do |form| %>
    <%= devise_error_messages! %>

        <div class="form-group row no-padding-bottom">
            <label class="col-sm-3 form-control-label" for="nome">Nome</label>
            <div class="col-sm-5">
                <%= form.text_field :nome, id: :funcionario_nome, class: "form-control" %>
                    <span class="help-block-none">Insira o nome do funcionário</span>
            </div>
        </div>

        <div class="form-group row  no-padding-bottom">
            <label class="col-sm-3 form-control-label" for="data">Data de Nascimento</label>
            <div class="col-sm-4">
                <%= form.date_field :data_nascimento, id: :funcionario_data_nascimento, class: "form-control" %>
                    <span class="help-block-none">Insira a data de nascimento do funcionário</span>
            </div>
        </div>

        <div class="form-group row  no-padding-bottom">
            <label class="col-sm-3 form-control-label">Sexo</label>
            <div class="col-sm-6">
                <%= radio_button :funcionario, :sexo, "M", class: "radio-template"%>
                    <label for="rdMasc">Masculino  </label>
                    <%= radio_button :funcionario, :sexo, "F", class: "radio-template"%>
                        <label for="rdFem">Feminino</label>
            </div>
        </div>

        <div class="form-group row  no-padding-bottom">
            <label class="col-sm-3 form-control-label" for="rg">RG</label>
            <div class="col-sm-2">
                <%= form.text_field :rg, id: :funcionario_rg, class: "form-control" %>
                    <span class="help-block-none">Insira o RG do funcionário</span>
            </div>
        </div>

        <div class="form-group row  no-padding-bottom">
            <label class="col-sm-3 form-control-label" for="cpf">CPF</label>
            <div class="col-sm-2">
                <%= form.text_field :cpf, id: :funcionario_cpf, class: "form-control" %>
                    <span class="help-block-none">Insira o CPF do funcionário</span>
            </div>
        </div>

        <div class="form-group row  no-padding-bottom">
            <label class="col-sm-3 form-control-label" for="telefone">Telefone</label>
            <div class="col-sm-4">
                <%= form.text_field :telefone, id: :funcionario_telefone, class: "form-control"  %>
                    <span class="help-block-none">Insira o telefone de contato</span>
            </div>
        </div>

        <div class="form-group row  no-padding-bottom">
            <label class="col-sm-3 form-control-label" for="dataAdm">Data de Admissão</label>
            <div class="col-sm-4">
                <%= form.date_field :data_admissao, id: :funcionario_data_admissao, class: "form-control" %>
                    <span class="help-block-none">Insira a data de admissão</span>
            </div>
        </div>

        <div class="form-group row  no-padding-bottom">
            <label class="col-sm-3 form-control-label" for="usuario">Email</label>
            <div class="col-sm-3">
                <%= form.email_field :email, autofocus: true, class: "form-control" %>
                    <span class="help-block-none">Insira o email do usuário</span>
            </div>
        </div>

        <div class="form-group row  no-padding-bottom">
            <label class="col-sm-3 form-control-label" for="senha">Senha</label>
            <div class="col-sm-3">
                <% if @minimum_password_length %>
                    <em>(
                        <%= @minimum_password_length %> characters minimum)</em>
                    <% end %>
                        <br />
                        <%= form.password_field :password, autocomplete: "off", class: "form-control" %>
                            <span class="help-block-none">Insira a senha</span>
            </div>
        </div>


        <div class="form-group row  no-padding-bottom">
            <label class="col-sm-3 form-control-label" for="senha">Confirme a Senha</label>
            <div class="col-sm-3">
                <%= form.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
                    <span class="help-block-none">Insira novamente a senha senha</span>
            </div>
        </div>

        <div class="form-group row  no-padding-bottom">
            <label class="col-sm-3 form-control-label" for="ctps">CTPS</label>
            <div class="col-sm-5">
                <%= form.text_field :ctps, id: :funcionario_ctps, class: "form-control"  %>
                    <span class="help-block-none">Insira a CTPS</span>
            </div>
        </div>

        <%#><div class="form-group row  no-padding-bottom">
            <label class="col-sm-3 form-control-label" for="funcao">Função</label>
            <div class="col-sm-3">
                <%= form.collection_select :setor_id, @setor_options, :id, :descricao, {}, class: "form-control" %>
           <%#> </div>
        </div> <#%>

        <div class="form-group row  no-padding-bottom">
            <label class="col-sm-3 form-control-label" for="cnh">CNH</label>
            <div class="col-sm-5">
                <%= form.text_field :cnh, id: :funcionario_cnh, class: "form-control", class: "form-control" %>
                    <span class="help-block-none">Insira a CNH</span>
            </div>
        </div>

        <div class="form-group row  no-padding-bottom">
            <label class="col-sm-3 form-control-label" for="cns">CNS</label>
            <div class="col-sm-5">
                <%= form.text_field :cns, id: :funcionario_cns, class: "form-control" %>
                    <span class="help-block-none">Insira o CNS</span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-4">
                <%= form.submit "Salvar", class: "btn btn-primary" %>
                    <% end %>

                        <%= render "devise/shared/links" %>
                        
</div>
</div>
</div>
</div>
</section>