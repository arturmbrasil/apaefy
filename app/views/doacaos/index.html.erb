<p id="notice"><%= notice %></p>

<h1>Doacaos</h1>

<table>
  <thead>
    <tr>
      <th>Valor</th>
      <th>Forma pagamento</th>
      <th>Parceiro</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doacaos.each do |doacao| %>
      <tr>
        <td><%= doacao.valor %></td>
        <td><%= doacao.forma_pagamento %></td>
        <td><%= doacao.parceiro.nome %></td>
        <td><%= link_to 'Mostrar', doacao %></td>
        <td><%= link_to 'Editar', edit_doacao_path(doacao) %></td>
        <td><%= link_to 'Remover', doacao, method: :delete, data: { confirm: 'Deseja remover o registro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Doacao', new_doacao_path %>
