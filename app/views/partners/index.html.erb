<header class='page-header'>
  <div class='container-fluid clearfix'>
    <%= link_to 'Cadastrar parceiro', new_partner_path, class: 'btn btn-primary float-right' %>
    <h2 class='no-margin-bottom'>Parceiros</h2>
  </div>
</header>
<ul class='breadcrumb'>
  <div class='container-fluid'>
    <li class='breadcrumb-item'>
      <%= link_to 'InÃ­cio', root_path %>
    </li>
    <li class='breadcrumb-item active'>Parceiros</li>
  </div>
</ul>
<section class="tables">
  <div class="container-fluid">
    <div class="card">
      <div class="card-block">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Email</th>
              <th>CNPJ</th>
              <th>Telefone</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @partners.each do |partner| %>
              <tr>
                <td><%= partner.name %></td>
                <td><%= partner.email %></td>
                <td><%= partner.document_cnpj %></td>
                <td><%= partner.phone_numbers.first %></td>
                <td>
                  <%= link_to partner_path(partner), class: 'btn btn-sm' do %>
                    <%= icon('eye') %>
                  <% end %>
                  <%= link_to edit_partner_path(partner), class: 'btn btn-sm' do %>
                    <%= icon('pencil-square-o') %>
                  <% end %>
                  <%= link_to partner_path(partner), method: 'delete', class: 'btn btn-sm', data: { confirm: 'Tem certeza que deseja excluir?' } do %>
                    <%= icon('trash') %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
