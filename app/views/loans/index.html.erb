<header class='page-header'>
  <div class='container-fluid clearfix'>
    <%= link_to 'Cadastrar Empréstimo', new_loan_path, class: 'btn btn-primary float-right' %>
    <h2 class='no-margin-bottom'>Empréstimos</h2>
  </div>
</header>
<ul class='breadcrumb'>
  <div class='container-fluid'>
    <li class='breadcrumb-item'>
      <%= link_to 'Início', root_path %>
    </li>
    <li class='breadcrumb-item active'>Empréstimos</li>
    <div class="pull-right">
      <%= link_to loans_path(format: :csv, params: request.query_parameters), class: 'btn btn-sm btn-primary' do %>
        <%= icon('download') %>
        Baixar relatório
      <% end %>
    </div>
  </div>
</ul>
<section class="tables">
  <div class="container-fluid">
    <div class="row">
        <div class="col-lg-4">
          <%= render 'loans/filter_form', filterrific: @filterrific %>
        </div>
        <div class="col-lg-8">
    <div class="card">
      <div class="card-block">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Tipo</th>
              <th>Data do empréstimo</th>
              <th>Data de entrega</th>
            </tr>
          </thead>
          <tbody>
            <% @loans.each do |loan| %>
              <tr>
                <% if loan.student %>
                  <td><%= loan.student.name %></td>
                  <td>Aluno</td>
                <% end %>
                <% if loan.user %>
                  <td><%= loan.user.name %></td>
                  <td>Funcionário</td>
                <% end %>
                <td><%= l loan.loan_date %></td>
                <td><%= l loan.return_date %></td>
                <td>
                  <%= link_to loan_path(loan), class: 'btn btn-sm' do %>
                    <%= icon('eye') %>
                  <% end %>
                  <%= link_to edit_loan_path(loan), class: 'btn btn-sm' do %>
                    <%= icon('pencil-square-o') %>
                  <% end %>
                  <%= link_to loan, method: 'delete', class: 'btn btn-sm', data: { confirm: 'Tem certeza que deseja excluir?' } do %>
                    <%= icon('trash') %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <%= paginate @loans %>
  </div>
</section>
