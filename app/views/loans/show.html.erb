<section class="client">
  <div class="container-fluid">
    <div class="card">
      <div class="card-close">
        <%= link_to 'Editar', edit_loan_path(@loan), class: 'btn btn-primary' %>
      </div>
      <div class="card-body text-center">
        <div class="client-title">
          <h1>
            <% if @loan.student %>
              <%= @loan.student.name %>
            <% end %>
            <% if @loan.user %>
              <%= @loan.user.name %>
            <% end %>
          </h1>
          <span>
            Empréstimo
          </span>
        </div>
        <div class="client-info">
          <div class="row">
            <div class="col-6">
              <strong><%= l @loan.loan_date %></strong><br>
              <small>Data do empréstimo</small>
            </div>
            <div class="col-6">
              <strong><%= l @loan.return_date %></strong><br>
              <small>Data de retorno</small>
            </div>
          </div>
        </div>
        <div class="card-body">
          <table class="table table-hover">
            <thead>
              <th>Nome</th>
              <th>Descrição</th>
              <th>Valor</th>
              <th>Estoque</th>
            </thead>
            <tbody>
              <%= render @loan.products %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
