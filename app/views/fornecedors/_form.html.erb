<div class="card">
  <div class="card-body">
    <%= form_with(model: fornecedor, local: true) do |form| %>
      <%= errors_for(fornecedor) %>

          <div class="form-group">
            <%= form.label :nome, class: 'form-control-label' %>
              <%= form.text_field :nome, id: :fornecedor_nome, class: "form-control", required: true %>
          </div>

          <div class="form-group">
            <%= form.label :telefone, class: 'form-control-label' %>
              <%= form.text_field :telefone, id: :fornecedor_telefone, class: "form-control js-phone-number", required: true %>
          </div>

          <div class="form-group">
            <%= form.label 'CNPJ', class: 'form-control-label' %>
              <%= form.text_field :cnpj, id: :fornecedor_cnpj, class: "form-control js-document-cnpj", required: true %>
          </div>

          <div class="form-group">
            <%= form.label :inscricao_estadual, class: 'form-control-label' %>
              <%= form.text_field :inscricao_estadual, id: :fornecedor_inscricao_estadual, class: "form-control", required: true %>
          </div>

          <div class="form-group">
            <%= form.label 'Centro de Custo', class: 'form-control-label' %>
              <%= form.text_field :centro_custo, id: :fornecedor_centro_custo, class: "form-control", required: true %>
          </div>
          <div class="form-group">
            <%= form.label :email, class: 'form-control-label' %>
              <%= form.text_field :email, id: :fornecedor_email, class: "form-control", required: true %>
          </div>
          <div class="form-group">
            <%= form.label :state_id, 'Estado', class: 'form-control-label' %>
              <%= form.collection_select(:state_id, State.all, :id, :acronym, { prompt: true }, { class: 'form-control js-state-select' }) %>
          </div>
          <div class="form-group">
            <%= form.label :city_id, "Cidade", class: 'form-control-label' %>
              <%= form.select(:city_id, @cities ? @cities : [], {}, { class: 'form-control js-city-select' }) %>
          </div>
          <div class="form-group">
            <%= form.label :logradouro, class: 'form-control-label' %>
              <%= form.text_field :logradouro, id: :fornecedor_logradouro, class: "form-control", required: true %>
          </div>
          <div class="form-group">
            <%= form.label "NÃºmero do logradouro", class: 'form-control-label' %>
              <%= form.text_field :numero_log, id: :fornecedor_numero_log, class: "form-control", required: true %>
          </div>
          <div class="form-group">
            <%= form.label :bairro, class: 'form-control-label' %>
              <%= form.text_field :bairro, id: :fornecedor_bairro, class: "form-control", required: true %>
          </div>
          <div class="form-group">
            <%= form.label :site, class: 'form-control-label' %>
              <%= form.text_field :site, id: :fornecedor_site, class: "form-control", required: true %>
          </div>
          <div class="form-group">
            <%= form.submit "Cadastrar Fornecedor", class: "btn btn-primary" %>
          </div>
          <% end %>
  </div>
</div>