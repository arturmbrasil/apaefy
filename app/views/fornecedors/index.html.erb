<p id="notice"><%= notice %></p>

<h1>Fornecedors</h1>

<table>
  <thead>
    <tr>
      <th>Código</th>
      <th>Nome</th>
      <th>Telefone</th>
      <th>CNPJ</th>
      <th>Inscrição estadual</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fornecedors.each do |fornecedor| %>
      <tr>
        <td><%= fornecedor.codigo %></td>
        <td><%= fornecedor.nome %></td>
        <td><%= fornecedor.telefone %></td>
        <td><%= fornecedor.cnpj %></td>
        <td><%= fornecedor.inscricao_estadual %></td>
        <td><%= link_to 'Exibir', fornecedor %></td>
        <td><%= link_to 'Editar', edit_fornecedor_path(fornecedor) %></td>
        <td><%= link_to 'Excluir', fornecedor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

