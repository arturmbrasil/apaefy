<header class='page-header'>
  <div class='container-fluid clearfix'>
    <%= link_to 'Cadastrar fornecedor', new_fornecedor_path, class: 'btn btn-primary float-right' %>
      <h2 class='no-margin-bottom'>Fornecedores</h2>
  </div>
</header>
<ul class='breadcrumb'>
  <div class='container-fluid'>
    <li class='breadcrumb-item'>
      <%= link_to 'Início', root_path %>
    </li>
    <li class='breadcrumb-item active'>Fornecedores</li>
  </div>
</ul>
<section class="tables">
  <div class="container-fluid">
    <div class="card">
      <div class="card-header">
        <%= form_tag fornecedors_path, :method => 'get' do%>
          <div class="input-group">
              <%= text_field_tag :search, params[:search] %>
                <span class="input-group-btn">
                  <%= submit_tag "Buscar", class: "btn btn-primary"%>
                </span>
            <%= link_to "Relatório", fornecedors_relatorio_path, class: "btn btn-primary float-right" %>
          </div>
          <% end %>
      </div>
      <div class="card-block">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Telefone</th>
              <th>CNPJ</th>
              <th>Inscrição estadual</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @fornecedors.each do |fornecedor| %>
              <tr>
                <td>
                  <%= fornecedor.nome %>
                </td>
                <td>
                  <%= fornecedor.telefone %>
                </td>
                <td>
                  <%= fornecedor.cnpj %>
                </td>
                <td>
                  <%= fornecedor.inscricao_estadual %>
                </td>
                <td>
                  <%= link_to edit_fornecedor_path(fornecedor), class: 'btn btn-sm' do %>
                    <%= icon('pencil-square-o') %>
                      <% end %>
                        <%= link_to fornecedor_path(fornecedor), method: 'delete', class: 'btn btn-sm', data: { confirm: 'Tem certeza que deseja excluir?' } do %>
                          <%= icon('trash') %>
                            <% end %>
                </td>
              </tr>
              <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>