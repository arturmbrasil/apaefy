<div class="card">
  <div class="card-body">
    <%= form_with(model: projeto, local: true, html: {class: "form-horizontal"}) do |form| %>
      <%= errors_for(projeto) %>

          <div class="form-group">
            <%= form.label :titulo, class: 'form-control-label' %>
              <%= form.text_field :titulo, id: :projeto_titulo,class: "form-control", required: true %>
          </div>
          <div class="form-group">
            <%= form.label :descricao, class: 'form-control-label' %>
              <%= form.text_area :descricao, id: :projeto_descricao, cols: 41,s: 3,class: "form-control", required: true %>
          </div>

          <div class="form-group">
            <%= form.label :status, class: 'form-control-label' %>

              <div class="select">
                <%= select :projeto, :status, [["Andamento", "A"], ["Finalizado", "F"]], {},class: "form-control", required: true%>
              </div>
          </div>

          <div class="form-group">
            <%= form.label "Metas", class: "form-control-label" %>
              <%= form.text_field :metas, id: :projeto_metas, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.label "OrÃ§amento", class: "form-control-label" %>
              <%= form.text_field :valor, id: :projeto_valor, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.submit "Criar Projeto", class: "btn btn-primary" %>
          </div>
          <% end %>
  </div>
</div>