<p id="notice"><%= notice %></p>

<h1>Agendamentos</h1>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>Horário</th>
      <th>Aluno</th>
      <th>Funcionário</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= l appointment.data %></td>
        <td><%= l appointment.horario, format: :time_only %></td>
        <td><%= appointment.student.nome %></td>
        <td><%= appointment.funcionario.nome %></td>
        <td><%= link_to 'Detalhes', appointment %></td>
        <td><%= link_to 'Editar', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Excluir', appointment, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Agendamento', new_appointment_path %>
