<div class="card">
  <div class="card-body">
    <%= form_with(model: product, local: true) do |f| %>
      <%= errors_for(product) %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :stock %>
        <%= f.text_area :stock, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :value %>
        <%= f.text_field :value, class: 'form-control js-currency', required: true %>
      </div>

      <div class="form-group">
        <%= f.submit 'Salvar', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
