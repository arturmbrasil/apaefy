<header class='page-header'>
  <div class='container-fluid clearfix'>
    <%= link_to 'Cadastrar Produto', new_product_path, class: 'btn btn-primary float-right' %>
    <h2 class='no-margin-bottom'>Produtos</h2>
  </div>
</header>
<ul class='breadcrumb'>
  <div class='container-fluid'>
    <li class='breadcrumb-item'>
      <%= link_to 'Início', root_path %>
    </li>
    <li class='breadcrumb-item active'>Produtos</li>
    <div class="pull-right">
      <%= link_to products_path(format: :csv, params: request.query_parameters), class: 'btn btn-sm btn-primary' do %>
        <%= icon('download') %>
        Baixar relatório
      <% end %>
    </div>
  </div>
</ul>
<section class="tables">
  <div class="container-fluid">
    <div class="card">
      <div class="card-header">
        <%= render 'products/filter_form', filterrific: @filterrific %>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <div class="card">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-block">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>Nome</th>
                  <th>Valor</th>
                  <th>Estoque</th>
                  <th>Data de cadastro</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @products.each do |product| %>
                  <tr>
                    <td><%= product.name %></td>
                    <td><%= number_to_currency product.value %></td>
                    <td><%= product.stock %></td>
                    <td><%= l product.created_at, format: '%d/%m/%Y' %></td>
                    <td>
                      <%= link_to edit_product_path(product), class: 'btn btn-sm' do %>
                        <%= icon('pencil-square-o') %>
                      <% end %>
                      <%= link_to product, method: 'delete', class: 'btn btn-sm', data: { confirm: 'Tem certeza que deseja excluir?' } do %>
                        <%= icon('trash') %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <%= paginate @products %>
  </div>
</section>
