  <div id="medicines">
      <%= form.fields_for :medicines do |medicines_fields| %>
          <%= render partial: "medicine_fields", locals: { f: medicines_fields } %>
      <% end %>
      <%= link_to_add_association('[Adicionar Medicamento]', form, :medicines) %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
