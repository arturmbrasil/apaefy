    <%= form_for_filterrific filterrific, html: { id: 'filterrific-no-ajax-auto-submit' } do |f| %>

      <div class="client-info">
        <div class="row">
          <div class="col-6">
            <%= f.label :search_query, 'Pesquisar', class: 'form-control-label' %>
            <%= f.text_field :search_query, class: 'form-control mb-4 mr-sm-4 mb-sm-0', placeholder: 'Pesquisar por nome ou frota'  %>
          </div>
          <div class="col-6">
            <%= f.label :search_query, 'Possui restrição alimentar', class: 'form-control-label' %>
            <%= f.select :sorted_by_restriction, filterrific.select_options[:sorted_by_restriction], { prompt: true }, { class: 'custom-select form-control' } %>
          </div>
        </div>
        <div class="row">
          <div class="col-6">
            <%= f.label :search_query, 'Toma algum medicamento', class: 'form-control-label' %>
            <%= f.select :sorted_by_use_meds, filterrific.select_options[:sorted_by_use_meds], { prompt: true }, { class: 'custom-select form-control' } %>
          </div>
          <div class="col-6">
            <%= f.label :search_query, 'Ordernar', class: 'form-control-label' %>
            <%= f.select :sorted_by, filterrific.select_options[:sorted_by], {}, { class: 'custom-select form-control' } %>
          </div>
        </div>
      </div>
      <%= f.submit 'Filtrar', class: 'btn btn-primary' %>
      <%= link_to 'Limpar', reset_filterrific_url, class: 'btn btn-secondary' %>
    <% end %>
