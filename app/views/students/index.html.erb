<header class='page-header'>
  <div class='container-fluid clearfix'>
    <%= link_to 'Cadastrar aluno', new_student_path, class: 'btn btn-primary float-right' %>
    <h2 class='no-margin-bottom'>Alunos</h2>
  </div>
</header>
<ul class='breadcrumb'>
  <div class='container-fluid'>
    <li class='breadcrumb-item'>
      <%= link_to 'Início', root_path %>
    </li>
    <li class='breadcrumb-item active'>Alunos</li>
    <div class="pull-right">
      <%= link_to students_path(format: :csv, params: request.query_parameters), class: 'btn btn-sm btn-primary' do %>
        <%= icon('download') %>
        Baixar relatório
      <% end %>
    </div>
  </div>
</ul>
<section class="tables">
  <div class="container-fluid">
    <div class="card">
      <div class="card-header">
        <%= render 'students/filter_form', filterrific: @filterrific %>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <div class="card">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-block">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>Nome</th>
                  <th>CPF</th>
                  <th>RG</th>
                  <th>Telefone</th>
                  <th>Frota</th>
                  <th>Data de nascimento</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @students.each do |student| %>
                  <tr>
                    <td><%= student.name %></td>
                    <td><%= student.document_cpf %></td>
                    <td><%= student.document_rg %></td>
                    <td><%= student.phone_numbers.first %></td>
                    <td><%= student.get_fleet_name %></td>
                    <td><%= l student.birthday, format: '%d/%m/%Y' %></td>
                    <td>
                      <%= link_to student_path(student), class: 'btn btn-sm' do %>
                        <%= icon('eye') %>
                      <% end %>
                      <%= link_to edit_student_path(student), class: 'btn btn-sm' do %>
                        <%= icon('pencil-square-o') %>
                      <% end %>
                      <%= link_to student_path(student), method: 'delete', class: 'btn btn-sm', data: { confirm: 'Tem certeza que deseja excluir?' } do %>
                        <%= icon('trash') %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <%= paginate @students %>
  </div>
</section>
