<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Data nascimento</th>
      <th>Rg aluno</th>
      <th>Cpf aluno</th>
      <th>Telefone</th>
      <th>Sexo</th>
      <th>Responsavel curador</th>
      <th>Restricoes alimentares</th>
      <th>Rg responsavel</th>
      <th>Cpf responsavel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.nome %></td>
        <td><%= l student.data_nascimento %></td>
        <td><%= student.rg_aluno %></td>
        <td><%= student.cpf_aluno %></td>
        <td><%= student.telefone %></td>
        <td><%= student.sexo %></td>
        <td><%= student.responsavel_curador %></td>
        <td><%= student.restricoes_alimentares %></td>
        <td><%= student.rg_responsavel %></td>
        <td><%= student.cpf_responsavel %></td>
        <td><%= link_to 'Detalhes', student %></td>
        <td><%= link_to 'Editar', edit_student_path(student) %></td>
        <td><%= link_to 'Excluir', student, method: :delete, data: { confirm: 'Deseja realmente excluir?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

