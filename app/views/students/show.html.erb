<p id="notice"><%= notice %></p>

<h1>Detalhes do Aluno</h1>

<p>
  <strong>Nome:</strong>
  <%= @student.nome %>
</p>

<p>
  <strong>Data nascimento:</strong>
  <%= l @student.data_nascimento %>
</p>

<p>
  <strong>Rg aluno:</strong>
  <%= @student.rg_aluno %>
</p>

<p>
  <strong>Cpf aluno:</strong>
  <%= @student.cpf_aluno %>
</p>

<p>
  <strong>Telefone:</strong>
  <%= @student.telefone %>
</p>

<p>
  <strong>Sexo:</strong>
  <%= @student.sexo %>
</p>

<p>
  <strong>Responsavel curador:</strong>
  <%= @student.responsavel_curador %>
</p>

<p>
  <strong>Restricoes alimentares:</strong>
  <%= @student.restricoes_alimentares %>
</p>

<p>
  <strong>Rg responsavel:</strong>
  <%= @student.rg_responsavel %>
</p>

<p>
  <strong>Cpf responsavel:</strong>
  <%= @student.cpf_responsavel %>
</p>
<br>
<h2>Medicamentos</h2>
<table>
  <thead>
    <th><strong>Nome</strong></th>
    <th><strong>Dosagem</strong></th>
    <th><strong>Intervalo de Tempo</strong></th>
  </thead>
  <tbody>
    <% @student.medicines.each do |med| %>
      <tr>
        <td><%= med.nome %></td>
        <td><%= med.dosagem %></td>
        <td><%= med.intervalo_tempo %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Editar', edit_student_path(@student) %> |
<%= link_to 'Voltar', students_path %>
