<header class='page-header'>
  <div class='container-fluid clearfix'>
    <%= link_to 'Cadastrar Abastecimento', new_supply_path, class: 'btn btn-primary float-right' %>
    <h2 class='no-margin-bottom'>Abastecimentos</h2>
  </div>
</header>
<ul class='breadcrumb'>
  <div class='container-fluid'>
    <li class='breadcrumb-item'>
      <%= link_to 'Início', root_path %>
    </li>
    <li class='breadcrumb-item active'>Abastecimentos</li>
    <div class="pull-right">
      <%= link_to supplies_path(format: :csv, params: request.query_parameters), class: 'btn btn-sm btn-primary' do %>
        <%= icon('download') %>
        Baixar relatório
      <% end %>
    </div>
  </div>
</ul>
<section class="tables">
  <div class="container-fluid">
    <div class="card">
      <div class="card-header">
        <%= render 'supplies/filter_form', filterrific: @filterrific %>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <div class="card">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-block">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>Combustível</th>
                  <th>Frota</th>
                  <th>Litros</th>
                  <th>Valor</th>
                  <th>Data de Abastecimento</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @supplies.each do |supply| %>
                  <tr>
                    <td><%= supply.fuel %></td>
                    <td><%= supply.fleet.name %></td>
                    <td><%= supply.liters %></td>
                    <td><%= number_to_currency supply.value %></td>
                    <td><%= l supply.supply_date %></td>
                    <td>
                      <%= link_to edit_supply_path(supply), class: 'btn btn-sm' do %>
                        <%= icon('pencil-square-o') %>
                      <% end %>
                      <%= link_to supply, method: 'delete', class: 'btn btn-sm', data: { confirm: 'Tem certeza que deseja excluir?' } do %>
                        <%= icon('trash') %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <%= paginate @supplies %>
  </div>
</section>
