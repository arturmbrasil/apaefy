<%= form_with(model: action_plan, local: true) do |form| %>
  <% if action_plan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(action_plan.errors.count, "error") %> prohibited this action_plan from being saved:</h2>

      <ul>
      <% action_plan.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Aluno" %>
    <%= form.hidden_field :student_id, class: 'js-autocomplete' %>
    <%= text_field_tag :search, params[:search], value: @action_plan.student.try(:nome), data: { autocomplete: autocomplete_student_nome_students_path } %>
  </div>

  <div class="field">
    <%= form.label :data %>
    <%= form.date_field :data, id: :action_plan_data %>
  </div>

  <div class="field">
    <%= form.label "Evolução" %>
    <%= form.text_area :evolucao, id: :action_plan_evolucao %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
