<div class="card">
  <div class="card-body">
    <%= form_with(model: fleet, local: true) do |f| %>
      <%= errors_for(fleet) %>

      <div class="form-group">
        <%= f.label :name, class: 'form-control-label' %>
        <%= f.text_field :name, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :vehicle, class: 'form-control-label' %>
        <%= f.text_field :vehicle, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :license_plate, class: 'form-control-label' %>
        <%= f.text_field :license_plate, class: 'form-control js-license-plate', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :document_renavam, class: 'form-control-label' %>
        <%= f.text_field :document_renavam, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :chassis, class: 'form-control-label' %>
        <%= f.text_field :chassis, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :driver, class: 'form-control-label' %>
        <%= f.collection_select(:driver_id, @drivers, :id, :name, { prompt: true }, { class: 'form-control' }) %>
      </div>

      <div class="form-group">
        <%= f.label :starting_address, class: 'form-control-label' %>
        <%= f.text_field :starting_address, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :destination_address, class: 'form-control-label' %>
        <%= f.text_field :destination_address, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :students, class: 'form-control-label' %>
        <%= f.collection_select(:student_ids, @students, :id, :name, { }, { class: 'form-control', multiple: true }) %>
      </div>

      <div class="form-group">
        <%= f.submit 'Enviar', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
