<header class='page-header'>
  <div class='container-fluid clearfix'>
    <%= link_to 'Cadastrar frota', new_fleet_path, class: 'btn btn-primary float-right' %>
    <h2 class='no-margin-bottom'>Frotas</h2>
  </div>
</header>
<ul class='breadcrumb'>
  <div class='container-fluid'>
    <li class='breadcrumb-item'>
      <%= link_to 'Início', root_path %>
    </li>
    <li class='breadcrumb-item active'>Frotas</li>
    <div class="pull-right">
      <%= link_to fleets_path(format: :csv, params: request.query_parameters), class: 'btn btn-sm btn-primary' do %>
        <%= icon('download') %>
        Baixar relatório
      <% end %>
    </div>
  </div>
</ul>
<section class="tables">
  <div class="container-fluid">
    <div class="card">
      <div class="card-header">
        <%= render 'fleets/filter_form', filterrific: @filterrific %>
      </div>  
      <div class="card-block">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Veículo</th>
              <th>Placa</th>
              <th>Motorista</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @fleets.each do |fleet| %>
              <tr>
                <td><%= fleet.name %></td>
                <td><%= fleet.vehicle %></td>
                <td><%= fleet.license_plate %></td>
                <td><%= fleet.driver.name %></td>
                <td>
                  <%= link_to fleet_path(fleet), class: 'btn btn-sm' do %>
                    <%= icon('eye') %>
                  <% end %>
                  <%= link_to edit_fleet_path(fleet), class: 'btn btn-sm' do %>
                    <%= icon('pencil-square-o') %>
                  <% end %>
                  <%= link_to fleet, method: 'delete', class: 'btn btn-sm', data: { confirm: 'Tem certeza que deseja excluir?' } do %>
                    <%= icon('trash') %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <%= paginate @fleets %>
  </div>
</section>
