<div class="modal fade" id="dietary_restriction-modal" tabindex="-1" role="dialog" aria-labelledby="restrição alimentar" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <%= form_with(model: dietary_restriction, remote: true, html: {'data-type': 'json', 'data-model': dietary_restriction.class.name.downcase}) do |f| %>
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Nova restrição alimentar</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= f.hidden_field :student_id %>
          <div class="form-group">
            <%= f.label :restriction, class: 'form-control-label' %>
            <%= f.text_field :restriction, class: 'form-control' %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
          <%= f.submit 'Salvar', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
