<div class="modal fade" id="donation-modal" tabindex="-1" role="dialog" aria-labelledby="doação" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <%= form_with(model: donation, remote: true, html: {'data-type': 'json', 'data-model': donation.class.model_name.singular}) do |f| %>
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Nova doação</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= f.hidden_field :partner_id %>

          <div class="form-group">
            <%= f.label :value, class: 'form-control-label' %>
            <%= f.text_field :value, class: 'form-control js-currency' %>
          </div>

          <div class="form-group">
            <%= f.label :payment_type, class: 'form-control-label' %>
            <%= f.text_field :payment_type, class: 'form-control', required: true %>
          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
          <%= f.submit 'Enviar', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
