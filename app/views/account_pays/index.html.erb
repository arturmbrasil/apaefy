<header class='page-header'>
  <div class='container-fluid clearfix'>
    <%= link_to 'Conta a Pagar', new_account_pay_path, class: 'btn btn-primary float-right' %>
    <h2 class='no-margin-bottom'>Conta a Pagar</h2>
  </div>
</header>
<ul class='breadcrumb'>
  <div class='container-fluid'>
    <li class='breadcrumb-item'>
      <%= link_to 'Início', root_path %>
    </li>
    <li class='breadcrumb-item active'>Conta a Pagar</li>
    <div class="pull-right">
      <%= link_to account_pays_path(format: :csv, params: request.query_parameters), class: 'btn btn-sm btn-primary' do %>
        <%= icon('download') %>
        Baixar relatório
      <% end %>
    </div>
  </div>
</ul>
<section class="tables">
  <div class="container-fluid">
    <div class="card">
      <div class="card-header">
        <%= render 'account_pays/filter_form', filterrific: @filterrific %>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <div class="card">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-block">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>Nome</th>
                  <th>Data</th>
                  <th>Número da Nota</th>
                  <th>Valor</th>
                  <th>Número da Parcela</th>
                  <th></th>
                </tr>
                </thead>
                <tbody>
                <% @account_pays.each do |account_pay| %>
                    <tr>
                      <td><%= account_pay.name %></td>
                      <td><%= l account_pay.date %></td>
                      <td><%= account_pay.nr_nota %></td>
                      <td><%= account_pay.value %></td>
                      <td><%= account_pay.num_parcela %></td>
                      <td>
                        <%= link_to account_pay_path(account_pay), class: 'btn btn-sm' do %>
                            <%= icon('eye') %>
                        <% end %>
                        <%= link_to edit_account_pay_path(account_pay), class: 'btn btn-sm' do %>
                            <%= icon('pencil-square-o') %>
                        <% end %>
                        <%= link_to account_pay_path(account_pay), method: 'delete', class: 'btn btn-sm', data: { confirm: 'Tem certeza que deseja excluir?' } do %>
                            <%= icon('trash') %>
                        <% end %>
                      </td>
                    </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
