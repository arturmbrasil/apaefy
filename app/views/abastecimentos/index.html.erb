<p id="notice"><%= notice %></p>

<h1>Abastecimentos</h1>

<%= form_tag abastecimentos_path, :method => 'get' do%>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Buscar"%>
<%end%>

<table>
  <thead>
    <tr>
      <th>Combust√≠vel</th>
      <th>Nome da Frota</th>
      <th>Litros</th>
      <th>Valor</th>
      <th>Data do abastecimento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @abastecimentos.includes(:frota).each do |abastecimento| %>
      <tr>
        <td><%= abastecimento.combustivel %></td>
        <td><%= abastecimento.frota.nome %></td>
        <td><%= abastecimento.litros %></td>
        <td><%= abastecimento.valor %></td>
        <td><%= abastecimento.data_abastecimento %></td>
        <td><%= link_to 'Detalhes', abastecimento %></td>
        <td><%= link_to 'Editar', edit_abastecimento_path(abastecimento) %></td>
        <td><%= link_to 'Excluir', abastecimento, method: :delete, data: { confirm: 'Deseja realmente excluir?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

