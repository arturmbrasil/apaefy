<header class='page-header'>
  <div class='container-fluid clearfix'>
    <%= link_to 'Cadastrar funcionário', new_user_path, class: 'btn btn-primary float-right' %>
    <h2 class='no-margin-bottom'>Funcionários</h2>
  </div>
</header>
<ul class='breadcrumb'>
  <div class='container-fluid'>
    <li class='breadcrumb-item'>
      <%= link_to 'Início', root_path %>
    </li>
    <li class='breadcrumb-item active'>Funcionários</li>
  </div>
</ul>
<section class="tables">
  <div class="container-fluid">
    <div class="card">
      <div class="card-block">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>Nome</th>
              <th>CPF</th>
              <th>RG</th>
              <th>Telefone</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.document_cpf %></td>
                <td><%= user.document_rg %></td>
                <td><%= user.phone_numbers.first %></td>
                <td>
                  <%= link_to user_path(user), class: 'btn btn-sm' do %>
                    <%= icon('eye') %>
                  <% end %>
                  <%= link_to edit_user_path(user), class: 'btn btn-sm' do %>
                    <%= icon('pencil-square-o') %>
                  <% end %>
                  <%= link_to user_path(user), method: 'delete', class: 'btn btn-sm', data: { confirm: 'Tem certeza que deseja excluir?' } do %>
                    <%= icon('trash') %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <%= paginate @users %>
  </div>
</section>
