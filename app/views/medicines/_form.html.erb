<div class="card">
  <div class="card-body">
    <%= form_with(model: medicine, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :name, class: 'form-control-label' %>
        <%= f.text_field :name, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :dosage, class: 'form-control-label' %>
        <%= f.text_field :dosage, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :time_interval, class: 'form-control-label' %>
        <%= f.text_field :time_interval, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :student_id, class: 'form-control-label' %>
        <%= f.select :student_id, Student.all.map { |s| [s.name, s.id] }, {}, { class: 'form-control' } %>
      </div>

      <div class="form-group">
        <%= f.submit 'Enviar', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

