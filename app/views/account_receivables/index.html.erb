<header class='page-header'>
  <div class='container-fluid clearfix'>
    <%= link_to 'Conta a Receber', new_account_receivable_path, class: 'btn btn-primary float-right' %>
    <h2 class='no-margin-bottom'>Conta a receber</h2>
  </div>
</header>
<ul class='breadcrumb'>
  <div class='container-fluid'>
    <li class='breadcrumb-item'>
      <%= link_to 'Início', root_path %>
    </li>
    <li class='breadcrumb-item active'>Conta a receber</li>
     <div class="pull-right">
      <%= link_to account_receivables_path(format: :csv, params: request.query_parameters), class: 'btn btn-sm btn-primary' do %>
        <%= icon('download') %>
        Baixar relatório
      <% end %>
    </div>
  </div>
</ul>
<section class="tables">
  <div class="container-fluid">
    <div class="card">
      <div class="card-header">
        <%= render 'account_receivables/filter_form', filterrific: @filterrific %>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <div class="card">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-block">
            <table class="table table-striped table-sm">
              <thead>
              <tr>
                <th>Nome</th>
                <th>Data</th>
                <th>Valor</th>
                <th>Número da Parcela</th>
                <th></th>
              </tr>
              </thead>
              <tbody>
              <% @account_receivables.each do |account_receivable| %>
                  <tr>
                    <td><%= account_receivable.name %></td>
                    <td><%= l account_receivable.date %></td>
                    <td><%= account_receivable.value %></td>
                    <td><%= account_receivable.num_parcela %></td>
                    <td>
                      <%= link_to account_receivable_path(account_receivable), class: 'btn btn-sm' do %>
                          <%= icon('eye') %>
                      <% end %>
                      <%= link_to edit_account_receivable_path(account_receivable), class: 'btn btn-sm' do %>
                          <%= icon('pencil-square-o') %>
                      <% end %>
                      <%= link_to account_receivable_path(account_receivable), method: 'delete', class: 'btn btn-sm', data: { confirm: 'Tem certeza que deseja excluir?' } do %>
                          <%= icon('trash') %>
                      <% end %>
                    </td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
