<div class="card">
  <div class="card-body">
    <%= form_with(model: project, local: true) do |f| %>
      <%= errors_for(project) %>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :status %>
        <%= f.text_field :status, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :goals %>
        <%= f.text_field :goals, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :value %>
        <%= f.text_field :value, class: 'form-control js-currency', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :user_id %>
        <%= f.collection_select(:user_id, User.all, :id, :name, { prompt: true }, { class: 'form-control' }) %>
      </div>

      <div class="form-group">
        <%= f.submit 'Salvar', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
