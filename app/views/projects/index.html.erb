<header class='page-header'>
  <div class='container-fluid clearfix'>
    <%= link_to 'Cadastrar Projeto', new_project_path, class: 'btn btn-primary float-right' %>
      <h2 class='no-margin-bottom'>Projetos</h2>
  </div>
</header>
<ul class='breadcrumb'>
  <div class='container-fluid'>
    <li class='breadcrumb-item'>
      <%= link_to 'Início', root_path %>
    </li>
    <li class='breadcrumb-item active'>Projetos</li>
    <div class="pull-right">
      <%= link_to projects_path(format: :csv, params: request.query_parameters), class: 'btn btn-sm btn-primary' do %>
        <%= icon('download') %>
          Baixar relatório
          <% end %>
    </div>
  </div>
</ul>
<section class="tables">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-4">
        <%= render 'partners/filter_form', filterrific: @filterrific %>
      </div>
      <div class='col-lg-8'>
        <div class="card">
          <div class="card-block">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>Título</th>
                  <th>Funcionário</th>
                  <th>Valor</th>
                  <th>Data de cadastro</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @projects.each do |project| %>
                  <tr>
                    <td>
                      <%= project.title %>
                    </td>
                    <td>
                      <%= project.user.name %>
                    </td>
                    <td>
                      <%= number_to_currency project.value %>
                    </td>
                    <td>
                      <%= l project.created_at, format: '%d/%m/%Y' %>
                    </td>
                    <td>
                      <%= link_to edit_project_path(project), class: 'btn btn-sm' do %>
                        <%= icon('pencil-square-o') %>
                          <% end %>
                            <%= link_to project, method: 'delete', class: 'btn btn-sm', data: { confirm: 'Tem certeza que deseja excluir?' } do %>
                              <%= icon('trash') %>
                                <% end %>
                    </td>
                  </tr>
                  <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <%= paginate @projects %>
  </div>
</section>