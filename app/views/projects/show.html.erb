<section class="client">
  <div class="container-fluid">
    <div class="card">
      <div class="card-close">
        <%= link_to 'Editar', edit_project_path(@project), class: 'btn btn-primary' %>
      </div>
      <div class="card-body text-center">
        <div class="client-title">
          <h1><%= @project.title %></h1>
          <span>
            Projeto
          </span>
        </div><br>
        <div class="client-info">
          <div class="row">
            <div class="col-4">
              <strong><%= @project.status %></strong><br>
              <small>Status</small>
            </div>
            <div class="col-4">
              <strong><%= @project.goals %></strong><br>
              <small>Metas</small>
            </div>
            <div class="col-4">
              <strong>R$<%= @project.value %></strong><br>
              <small>Valor</small>
            </div>
          </div>
        </div><br>
        <div class="client-info">
          <%= @project.description %>
        </div><br><br>
        <div class="line"></div>
        <div class="card-header d-flex align-items-center">
          <h3 class="h4">Funcionários</h3>
        </div>
        <div class="card-body">
          <table class="table table-hover">
            <thead>
              <th>Nome</th>
              <th>Função</th>
              <th>CPF</th>
              <th>Data de admissão</th>
            </thead>
            <tbody>
              <%= render @project.users %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
