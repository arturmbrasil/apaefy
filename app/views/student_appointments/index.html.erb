<header class='page-header'>
  <div class='container-fluid clearfix'>
    <%= link_to 'Cadastrar Agendamento', new_student_appointment_path, class: 'btn btn-primary float-right' %>
    <h2 class='no-margin-bottom'>Agendamentos</h2>
  </div>
</header>
<ul class='breadcrumb'>
  <div class='container-fluid'>
    <li class='breadcrumb-item'>
      <%= link_to 'Início', root_path %>
    </li>
    <li class='breadcrumb-item active'>Agendamentos</li>
    <div class="pull-right">
      <%= link_to student_appointments_path(format: :csv, params: request.query_parameters), class: 'btn btn-sm btn-primary' do %>
        <%= icon('download') %>
        Baixar relatório
      <% end %>
    </div>
  </div>
</ul>
<section class="tables">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-4">
        <%= render 'student_appointments/filter_form', filterrific: @filterrific %>
      </div>
      <div class="col-lg-8">
    <div class="card">
      <div class="card-block">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>Aluno</th>
              <th>Funcionário</th>
              <th>Data</th>
              <th>Horário</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @student_appointments.each do |student_appointment| %>
              <tr>
                <td><%= student_appointment.student.name %></td>
                <td><%= student_appointment.user.name %></td>
                <td><%= l student_appointment.date %></td>
                <td><%= l student_appointment.time, format: '%H:%M' %></td>
                <td>
                  <%= link_to student_appointment_path(student_appointment), class: 'btn btn-sm' do %>
                    <%= icon('eye') %>
                  <% end %>
                  <%= link_to edit_student_appointment_path(student_appointment), class: 'btn btn-sm' do %>
                    <%= icon('pencil-square-o') %>
                  <% end %>
                  <%= link_to student_appointment, method: 'delete', class: 'btn btn-sm', data: { confirm: 'Tem certeza que deseja excluir?' } do %>
                    <%= icon('trash') %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    </div>
    <%= paginate @student_appointments %>
  </div>
</section>
