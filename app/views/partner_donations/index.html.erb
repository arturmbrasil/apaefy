<header class='page-header'>
  <div class='container-fluid clearfix'>
    <%= link_to 'Cadastrar parceiro', new_partner_path, class: 'btn btn-primary float-right' %>
    <h2 class='no-margin-bottom'>Parceiros</h2>
  </div>
</header>
<ul class='breadcrumb'>
  <div class='container-fluid'>
    <li class='breadcrumb-item'>
      <%= link_to 'Início', root_path %>
    </li>
    <li class='breadcrumb-item active'>Doações</li>
    <div class="pull-right">
      <%= link_to partner_donations_path(format: :csv, params: request.query_parameters), class: 'btn btn-sm btn-primary' do %>
      <%= icon('download') %>
      Baixar relatório
      <% end %>
    </div>
  </div>
</ul>
<section class="tables">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-4">
        <%= render 'partner_donations/donations_filter_form', filterrific: @filterrific %>
      </div>
      <div class='col-lg-8'>
        <div class="card">
          <div class="card-block">
            <table class="table table-striped table-sm">
                <thead>
                  <tr>
                    <th>Valor</th>
                    <th>Parceiro</th>
                    <th colspan="1"></th>
                  </tr>
                </thead>
              <tbody>
                <tbody>
                  <% @partner_donations.each do |partner_donation| %>
                  <tr>
                    <td>
                      <%= partner_donation.value %>
                    </td>
                    <td>
                      <%= partner_donation.get_partner_name %>
                    </td>
                    <td>
                      <td>
                        <%= link_to partner_path(partner_donation), method: 'delete', class: 'btn btn-sm', data: { confirm: 'Tem certeza que deseja excluir?' } do %>
                        <%= icon('trash') %>
                        <% end %>
                      </td>
                    </td>
                  </tr>
                  <% end %>
                </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <%= paginate @partner_donations %>
  </div>
</section>