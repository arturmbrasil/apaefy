
<ul class='breadcrumb'>
  <div class='container-fluid'>
    <li class='breadcrumb-item'>
      <%= link_to 'Início', root_path %>
    </li>
    <li class='breadcrumb-item active'>Quadros evolutivos</li>
    <div class="pull-right">
      <%= link_to student_evolutions_path(format: :csv, params: request.query_parameters), class: 'btn btn-sm btn-primary' do %>
        <%= icon('download') %>
        Baixar relatório
      <% end %>
    </div>
  </div>
</ul>
<section class="tables">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-4">
        <%= render 'student_evolutions/filter_form', filterrific: @filterrific %>
      </div>
      <div class="col-lg-8">
        <div class="card">
          <div class="card-block">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>Aluno</th>
                  <th>Data</th>
                  <th>Descrição</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @student_evolutions.each do |student_evolution| %>
                  <tr>
                    <td><%= student_evolution.student.name %></td>
                    <td><%= l student_evolution.date %></td>
                    <td><%= student_evolution.description %></td>
                    <td>
                      <%= link_to student_evolution, method: 'delete', class: 'btn btn-sm', data: { confirm: 'Tem certeza que deseja excluir?' } do %>
                        <%= icon('trash') %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <%= paginate @student_evolutions %>
  </div>
</section>
