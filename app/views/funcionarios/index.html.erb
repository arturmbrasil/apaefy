<p id="notice"><%= notice %></p>

<h1>Funcionários</h1>

<table>
  <thead>
    <tr>
      <th>Código</th>
      <th>Nome</th>
      <th>Data de nascimento</th>
      <th>RG</th>
      <th>Usuário</th>
      <th>Senha</th>
      <th>Sexo</th>
      <th>Data de admissão</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @funcionarios.each do |funcionario| %>
      <tr>
        <td><%= funcionario.codigo %></td>
        <td><%= funcionario.nome %></td>
        <td><%= funcionario.data_nascimento %></td>
        <td><%= funcionario.rg %></td>
        <td><%= funcionario.usuario %></td>
        <td><%= funcionario.senha %></td>
        <td><%= funcionario.sexo %></td>
        <td><%= funcionario.data_admissao %></td>
        <td><%= link_to 'Exibir', funcionario %></td>
        <td><%= link_to 'Editar', edit_funcionario_path(funcionario) %></td>
        <td><%= link_to 'Excluir', funcionario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

