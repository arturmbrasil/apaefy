<p id="notice"><%= notice %></p>

<h1>Voluntários</h1>

<%= form_tag voluntarios_path, :method => 'get' do%>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Buscar"%>
<%end%>

<table>
  <thead>
    <tr>
      <th>Código</th>
      <th>Nome</th>
      <th>Data de nascimento</th>
      <th>RG</th>
      <th>CPF</th>
      <th>Telefone</th>
      <th>Sexo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @voluntarios.each do |voluntario| %>
      <tr>
        <td><%= voluntario.codigo %></td>
        <td><%= voluntario.nome %></td>
        <td><%= l voluntario.data_nascimento %></td>
        <td><%= voluntario.rg %></td>
        <td><%= voluntario.cpf %></td>
        <td><%= voluntario.telefone %></td>
        <td><%= voluntario.sexo %></td>
        <td><%= link_to 'Exibir', voluntario %></td>
        <td><%= link_to 'Editar', edit_voluntario_path(voluntario) %></td>
        <td><%= link_to 'Excluir', voluntario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Voluntário', new_voluntario_path %>
