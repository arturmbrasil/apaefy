<div class="card">
  <div class="card-body">
    <%= form_with(model: voluntario, local: true) do |form| %>
      <%= errors_for(voluntario) %>

        <div class="form-group">
          <%= form.label :nome, class: 'form-control-label' %>
            <%= form.text_field :nome, id: :voluntario_nome, class: "form-control" %>
        </div>


        <div class="form-group">
          <%= form.label "Data de Nascimento", class: 'form-control-label' %>
            <%= form.date_field :data_nascimento, id: :voluntario_data_nascimento, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :sexo, class: 'form-control-label' %>
            <%= form.select :sexo, [], {}, { class: 'form-control', required: true } do %>
              <%= options_for_select(Voluntario.sexos.map { |g| [Voluntario.human_attribute_name("gender.#{g.first}"), g.last] }, voluntario.sexo) %>
                <% end %>
        </div>

        <div class="form-group">
          <%= form.label :rg, class: 'form-control-label' %>
            <%= form.text_field :rg, id: :voluntario_rg, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :cpf, class: 'form-control-label' %>
            <%= form.text_field :cpf, id: :voluntario_cpf, class: "form-control js-document-cpf" %>
        </div>

        <div class="form-group">
          <%= form.label :telefone, class: 'form-control-label' %>
            <%= form.text_field :telefone, id: :voluntario_telefone, class: "form-control js-phone-number" %>
        </div>

        <div class="form-group">
          <%= form.label :atuacao, class: 'form-control-label' %>
            <%= form.text_area :atuacao, id: :voluntario_atuacao, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :state_id, 'Estado', class: 'form-control-label' %>
            <%= form.collection_select(:state_id, State.all, :id, :acronym, { prompt: true }, { class: 'form-control js-state-select' }) %>
        </div>
        <div class="form-group">
          <%= form.label :city_id, "Cidade", class: 'form-control-label' %>
            <%= form.select(:city_id, @cities ? @cities : [], {}, { class: 'form-control js-city-select' }) %>
        </div>
        <div class="form-group">
          <%= form.label :address_street, "Rua", class: 'form-control-label' %>
            <%= form.text_field :address_street, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :address_number, "Número", class: 'form-control-label' %>
            <%= form.text_field :address_number, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :address_neighborhood, "Bairro", class: 'form-control-label' %>
            <%= form.text_field :address_neighborhood, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :address_zip_code, "CEP", class: 'form-control-label' %>
            <%= form.text_field :address_zip_code, class: 'form-control js-address-zip-code' %>
        </div>

        <div class="form-group">
          <%= form.label :usuario, class: 'form-control-label' %>
            <%= form.text_field :usuario, id: :voluntario_usuario, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :senha, class: 'form-control-label' %>
            <%= form.password_field :senha, id: :voluntario_senha, class: "form-control" %>
        </div>


        <div class="form-group">
          <%= form.submit "Cadastrar Voluntário", class: "btn btn-primary"%>
        </div>

        <% end %>
  </div>
</div>