<%= form_with(model: voluntario, local: true, html: {class: "form-horizontal"}) do |form| %>
  <% if voluntario.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(voluntario.errors.count, "error") %> prohibited this voluntario from being saved:</h2>

      <ul>
        <% voluntario.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
          <% end %>
      </ul>
    </div>
    <% end %>

      <!--<div class="field">
    <%= form.label "Código" %>
    <%= form.number_field :codigo, id: :voluntario_codigo %>
  </div>-->
      <div class="form-group row">
        <label class="col-sm-3 form-control-label">Nome</label>
        <div class="col-sm-9">
          <%= form.text_field :nome, id: :voluntario_nome, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-3 form-control-label">Data de Nascimento</label>
        <div class="col-sm-9">
          <%= form.date_field :data_nascimento, id: :voluntario_data_nascimento, class: "form-control" %>
        </div>
      </div>

      <div class="line"></div>
      <div class="form-group row">
        <label class="col-sm-3 form-control-label">Sexo</label>
        <div class="col-sm-9">
          <%= radio_button :voluntario, :sexo, "M", class: "radio-template"%>
            <label for="rdMasc">Masculino  </label>
            <%= radio_button :voluntario, :sexo, "F", class: "radio-template"%>
              <label for="rdFem">Feminino</label>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-3 form-control-label">RG</label>
        <div class="col-sm-9">
          <%= form.text_field :rg, id: :voluntario_rg, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-3 form-control-label">CPF</label>
        <div class="col-sm-9">
          <%= form.text_field :cpf, id: :voluntario_cpf, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-3 form-control-label">Telefone</label>
        <div class="col-sm-9">
          <%= form.text_field :telefone, id: :voluntario_telefone, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-3 form-control-label">Atuação</label>
        <div class="col-sm-9">
          <%= form.text_area :atuacao, id: :voluntario_atuacao, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-3 form-control-label">Usuario</label>
        <div class="col-sm-9">
          <%= form.text_field :usuario, id: :voluntario_usuario, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-3 form-control-label">Senha</label>
        <div class="col-sm-9">
          <%= form.password_field :senha, id: :voluntario_senha, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-4 offset-sm-3">
          <%= form.submit "Cadastrar Voluntário", class: "btn btn-primary"%>

            <% end %>